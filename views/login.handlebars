<div class="card">
  <div class="card-header">
    <h2>Login</h2>
  </div>
  <form class="card-body login-form">
    <div class="form-group mb-3">
      <label for="username-login">Username</label>
      <input class="form-input" type="text" id="username-login" placeholder="Enter Username">
    </div>
    <div class="form-group mb-3">
      <label for="password-login">Password</label>
      <input class="form-input" type="password" id="password-login" placeholder="Enter Password">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-secondary fs-4 w-100">Login!</button>
      <div>
        <a href="/signup" class="text-dark">Sign up instead!</a>
      </div>
    </div>
  </form> 
</div>

<script src="./js/login.js"></script>


